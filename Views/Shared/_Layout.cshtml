@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - One Vision</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/One_Vision.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar AZUL -->
        <nav id="sidebar-wrapper" class="text-white border-end vh-100">
            <div class="sidebar-heading p-3 border-bottom fs-5 d-flex align-items-center">
                <img src="@Url.Content("~/css/OneVision.ico")" alt="Logo" width="48" height="48" class="me-3" />
                One Vision
            </div>
            <div class="list-group list-group-flush">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action text-white d-flex align-items-center">
                    <i class="bi bi-house-door me-2"></i> Inicio
                </a>
                <a asp-area="" asp-controller="Home" asp-action="Vision" class="list-group-item list-group-item-action text-white d-flex align-items-center">
                    <i class="bi bi-eye me-2"></i> Visión
                </a>
                <a asp-area="" asp-controller="PuntoVenta" asp-action="Index" class="list-group-item list-group-item-action text-white d-flex align-items-center">
                    <i class="bi bi-shop me-2"></i> Punto de venta
                </a>
                <a asp-area="" asp-controller="Historial" asp-action="Index" class="list-group-item list-group-item-action text-white d-flex align-items-center">
                    <i class="bi bi-file-medical me-2"></i> Historial Clínico
                </a>
                <a asp-area="" asp-controller="Inventario" asp-action="Index" class="list-group-item list-group-item-action text-white d-flex align-items-center">
                    <i class="bi bi-box-seam me-2"></i> Inventario
                </a>
                <a asp-area="" asp-controller="Configuracion" asp-action="Index" class="list-group-item list-group-item-action text-white d-flex align-items-center">
                    <i class="bi bi-gear me-2"></i> Configuración
                </a>
            </div>

        </nav>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom px-4 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <button class="btn btn-outline-secondary me-3" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <span class="fs-5">@ViewData["Title"]</span>
                </div>

                <div class="d-flex align-items-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <span class="me-3 fw-semibold text-dark">
                            <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                        </span>
                        <form method="post" asp-controller="Usuarios" asp-action="Logout" class="mb-0">
                            <button type="submit" class="btn btn-outline-danger btn-sm">Cerrar sesión</button>
                        </form>
                    }
                </div>
            </nav>

            <main class="container-fluid mt-4">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted py-3 px-4 mt-auto">
                &copy; 2025 - One_Vision - <a asp-area="" asp-controller="Home" asp-action="Vision">Visión</a>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const wrapper = document.getElementById("wrapper");
            const toggleButton = document.getElementById("menu-toggle");
            const sidebarLinks = document.querySelectorAll('#sidebar-wrapper .list-group-item');

            // ✅ REINSTALA EL TOGGLE del menú
            toggleButton.addEventListener("click", function () {
                wrapper.classList.toggle("toggled");
            });

            // Cierra el menú al hacer clic fuera del sidebar
            document.addEventListener("click", function (e) {
                if (window.innerWidth <= 768 &&
                    wrapper.classList.contains("toggled") &&
                    !document.getElementById("sidebar-wrapper").contains(e.target) &&
                    !toggleButton.contains(e.target)) {
                    wrapper.classList.remove("toggled");
                }
            });

            // Cierra el sidebar al seleccionar una opción (solo en móvil)
            sidebarLinks.forEach(link => {
                link.addEventListener("click", function () {
                    if (window.innerWidth <= 768) {
                        wrapper.classList.remove("toggled");
                    }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
