@model One_Vision.Models.Venta

@{
    ViewData["Title"] = "Detalle de Venta";
}

<h2>Detalle de la Venta #@Model.ID_Venta</h2>

<div class="mb-3">
    <strong>Paciente:</strong> @Model.Paciente?.Nombre <br />
    <strong>Usuario:</strong> @Model.Usuario?.Nombre <br />
    <strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy") <br />
    <strong>Total:</strong> $@Model.Total <br />
    <strong>Abonado:</strong> $@Model.Abonado <br />
</div>

<h4>Productos Vendidos</h4>
<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Producto</th>
            <th>Código</th>
            <th>Categoría</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VentaProductos)
        {
            <tr>
                <td>@item.Producto?.Nombre</td>
                <td>@item.CodigoDeBarra</td>
                <td>@item.Producto?.Categoria</td>
                <td>@item.Cantidad</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">← Volver</a>
