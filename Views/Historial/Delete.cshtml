@model One_Vision.Models.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<div class="card shadow-sm p-4">
    <h2 class="mb-3 text-danger">
        <i class="bi bi-person-x-fill me-2"></i> Eliminar paciente
    </h2>

    <p class="text-muted">¿Estás seguro de que deseas eliminar este paciente?</p>

    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-3">Edad</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Edad)</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
        </div>
    </form>
</div>
