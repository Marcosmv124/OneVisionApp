@model List<One_Vision.Models.Historial>

@{
    ViewData["Title"] = "Historial del Paciente";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-journal-bookmark-fill me-2"></i>Historial de @ViewBag.NombrePaciente</h2>
        <p class="text-muted">Consulta los ex치menes 칩pticos realizados por este paciente.</p>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle-fill me-1"></i> No hay ex치menes registrados para este paciente.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle shadow-sm rounded">
            <thead class="table-primary">
                <tr>
                    <th>Fecha</th>
                    <th>Motivo de Consulta</th>
                    <th>Ex치menes Complementarios</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FECHA</td>
                        <td>@item.Motivo_Sintomas</td>
                        <td>@item.Examenes_Complementarios</td>
                        <td class="text-center">
                            <a asp-action="DetailsExamen" asp-route-id="@item.ID" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-eye-fill"></i> Ver Examen
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4 text-end">
        <a asp-controller="Historial" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Regresar a la lista de pacientes
        </a>
    </div>
</div>
