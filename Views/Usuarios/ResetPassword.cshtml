@model One_Vision.DTOs.ResetPasswordRequest

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Establecer nueva contraseña";
}
<style>
    .btn-color {
        background-color: #253449;
        color: white;
    }

        .btn-color:hover {
            background-color: #C9B489;
            color: white;
        }
</style>

<div style="text-align: center; margin-top: 50px">
    <img src="~/css/logo.png" alt="logo" style="width: 300px; height: 200px;" />
</div>

<div class="cont-ainer">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 mt-5">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">
                        <i class="bi bi-key me-2"></i>Establecer Nueva Contraseña
                    </h3>

                    <form asp-controller="Usuarios" asp-action="RestablecerPassword" method="post">
                        @Html.AntiForgeryToken()

                        @* Campo oculto para token *@
                        <input type="hidden" asp-for="Token" value="@Model.Token" />

                        <div class="mb-3">
                            <label asp-for="NuevaPassword" class="form-label">Nueva Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="NuevaPassword" class="form-control" type="password" required />
                            </div>
                            <span asp-validation-for="NuevaPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-color">
                                <i class="bi bi-arrow-repeat me-2"></i>Restablecer
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Index" asp-controller="Usuarios" class="btn btn-link">← Volver al login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
