@model One_Vision.DTOs.LoginRequest


@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "One Vision";
}
<style>
    .btn-color {
        background-color: #253449;
        color: white;
    }

        .btn-color:hover {
            background-color: #C9B489;
            color: white;
        }
</style>
<div style="text-align: center; margin-top: 50px">
    <img src="~/css/logo.png" alt="logo" style="width: 300px; height: 200;" />
</div>

<div class="cont-ainer">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 mt-5">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">
                        <i class="bi bi-person-circle me-2"></i>Iniciar Sesión
                    </h3>

                    <form asp-controller="Usuarios" asp-action="Index" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="UsuarioNombre" class="form-label">Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="UsuarioNombre" class="form-control" required />
                            </div>
                            <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" id="passwordInput" required />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="mostrar" onclick="togglePasswordVisibility()">
                            <label class="form-check-label" for="mostrar">Mostrar contraseña</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-color">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>¿No tienes una cuenta? <a asp-action="Create" class="btn btn-link">Registrarse</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

